{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Jest (Current File)",
      "program": "${workspaceFolder}/node_modules/.bin/jest",
      "console": "integratedTerminal",
      "args": [
        "${relativeFile}",
        "--coverage",
        "false"
      ],
      "skipFiles": [
        "<node_internals>/**"
      ],
      "outFiles": [
        "${workspaceFolder}/**/*.js"
      ]
    }
  ]
}
